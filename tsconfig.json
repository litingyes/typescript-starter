{
  "compilerOptions": {
    "lib": ["DOM", "ESNext"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "paths": {
      "@/*": ["./src/*"]
    },
    "strict": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "isolatedModules": true
  },
  "include": ["./src/**/*.ts"]
}
